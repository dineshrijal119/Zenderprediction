<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/hospital_blur"
    android:orientation="vertical"
    android:id="@+id/linearLayout"
    android:focusable="true"
    android:focusableInTouchMode="true">

    <LinearLayout
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginTop="150dp"
        android:background="@drawable/quiz_question"
        android:orientation="vertical">

        <ProgressBar

            android:id="@+id/progressBar"
            android:visibility="gone"
            style="?android:attr/progressBarStyleHorizontal"
            android:layout_width="250dp"
            android:layout_height="250dp"
            android:layout_marginLeft="0dp"
            android:layout_centerHorizontal="true"
            android:indeterminate="false"
            android:max="100"
            android:progressDrawable="@drawable/progress"
            xmlns:android="http://schemas.android.com/apk/res/android" />
<LinearLayout
    android:layout_width="250dp"
    android:layout_height="45dp"
    android:orientation="horizontal"
    android:layout_marginTop="30dp"
    android:gravity="center_vertical"
    android:layout_gravity="center">
        <EditText
            android:id="@+id/mothrAge"
            style="@style/Widget.AppCompat.EditText"
            android:layout_width="200dp"
            android:layout_height="45dp"
            android:layout_centerVertical="true"
            android:hint="Enter mom age"
            android:textColor="#8c8181"
            android:textColorHint="#8b7e7e" />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="18-45"/>

</LinearLayout>


        <AutoCompleteTextView
            android:id="@+id/dateChick"
            style="@style/Widget.AppCompat.AutoCompleteTextView"
            android:layout_width="250dp"
            android:layout_height="45dp"
            android:layout_gravity="center"
            android:layout_centerVertical="true"
            android:layout_marginTop="30dp"
            android:hint="Enter conception months"
            android:textColorHint="#8b7e7e" />

        <LinearLayout
            android:layout_width="250dp"
            android:layout_height="45dp"
            android:layout_gravity="center"
            android:layout_marginTop="30dp"
            android:layout_marginBottom="30dp"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/imgBtn"
                android:layout_width="55dp"
                android:layout_height="55dp"
                android:layout_marginRight="10dp"
                android:background="@color/blood_button_pressed"
                android:src="@drawable/info_image" />

            <Button
                android:id="@+id/calculate"
                android:layout_width="160dp"
                android:layout_height="45dp"

                android:background="@drawable/custom_button_selector"
                android:text="Calculate"
                android:textColor="@android:color/black"/>


        </LinearLayout>
    </LinearLayout>
</LinearLayout>
